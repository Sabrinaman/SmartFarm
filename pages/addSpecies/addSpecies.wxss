.container {
  height: 100vh;
  background-color: #f5f5f5;
  position: relative;
}

.back-btn {
  position: absolute;
  left: 30rpx;
  top: 50rpx;
  z-index: 100;
  padding: 20rpx;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.species-swiper {
  height: 130vh;
  width: 600rpx;
}

.species-card {
  margin: 60rpx 40rpx;
  height: 65vh;
  border-radius: 30rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  display: flex;
  flex-direction: column;
}

/* 不同物种的卡片背景色 */
.card-banana { background-color: #e18184; }
.card-pig { background-color: #f5ad98; }
.card-chicken { background-color: #facd9d; }
.card-pineapple { background-color: #bcd0c4; }
.card-sugarcane { background-color: #c7dee1; }

.species-image {
  width: 250rpx;
  height: 250rpx;
  margin: 0 auto 40rpx;
}

.species-name {
  font-size: 48rpx;
  font-weight: bold;
  color: rgb(27, 27, 27);
  text-align: center;
  margin-bottom: 40rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.info-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.info-value.brown {
  color: #795548;
}

.info-value.easy { color: #4CAF50; }
.info-value.medium { color: #FF9800; }
.info-value.hard { color: #F44336; }

.claim-btn {
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 0;
  margin-top: auto;
  font-size: 32rpx;
}

.dots {
  position: absolute;
  bottom: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  gap: 16rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: rgba(0,0,0,0.2);
}

.dot.active {
  background-color: #4CAF50;
  width: 32rpx;
  border-radius: 8rpx;
}


/* 弹窗样式 */
/* 在原有样式后添加 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 30rpx;
  position: relative;
}

.input-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #ddd;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.unit {
  position: absolute;
  right: 20rpx;
  top: 50%;
  font-size: 28rpx;
  color: #999;
}

.modal-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 32rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: #4CAF50;
  color: #fff;
}