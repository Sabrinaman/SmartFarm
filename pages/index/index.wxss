/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  justify-content: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.container {
  padding: 0rpx;
  min-height: 80vh;
  background-color: #f5f5f5;
}

/* 顶部地址栏样式 */
.address-bar {
  width: 90%;
  height: 80rpx;
  background-color: rgb(165, 165, 165);
  padding: 20rpx 20rpx;
  margin-top: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.location {
  display: flex;
  align-items: center;
}

.location-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.location-text {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 天气信息区域样式 */
.weather-section {
  background-color: rgb(95, 95, 95);
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.weather-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.temp-box {
  display: flex;
  flex-direction: column;
}

.temperature {
  font-size: 72rpx;
  font-weight: bold;
  color: #333;
}

.weather-desc {
  font-size: 28rpx;
  color: #666;
}

.weather-details {
  display: flex;
  gap: 30rpx;
}

.weather-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.weather-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

/* 农场卡片区域样式 */
.farm-section {
  padding: 20rpx 0;
}

.section-header {
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.total-count {
  font-size: 24rpx;
  color: #999;
}

.card-swiper {
  height: 600rpx;
}

.farm-card {
  margin: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  transform: scale(0.9);
  transition: all 0.3s ease;
}

.farm-card.active {
  transform: scale(1);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.crop-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.crop-info {
  flex: 1;
}

.crop-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.crop-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-top: 8rpx;
  display: inline-block;
}

.status-good {
  background-color: #e8f5e9;
  color: #4caf50;
}

.status-warning {
  background-color: #fff3e0;
  color: #ff9800;
}

.growth-info {
  margin-bottom: 30rpx;
}

.progress-bar {
  height: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 10rpx;
}

.progress {
  height: 100%;
  background-color: #4caf50;
  border-radius: 10rpx;
}

.growth-text {
  font-size: 24rpx;
  color: #666;
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.info-item {
  background-color: #f8f8f8;
  padding: 20rpx;
  border-radius: 10rpx;
}

.info-label {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.care-tips {
  display: flex;
  align-items: center;
  background-color: #fff8e1;
  padding: 20rpx;
  border-radius: 10rpx;
}

.tips-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.tips-text {
  font-size: 24rpx;
  color: #ffa000;
}

.add-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border: 3rpx dashed #4CAF50;
}

.add-icon {
  font-size: 80rpx;
  color: #4CAF50;
  margin-bottom: 20rpx;
}

.add-text {
  font-size: 28rpx;
  color: #4CAF50;
}